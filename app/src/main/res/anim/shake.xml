<set xmlns:android="http://schemas.android.com/apk/res/android">

    <rotate
        android:duration="100"
        android:fromDegrees="-15"
        android:pivotX="40%"
        android:pivotY="40%"
        android:repeatCount="5"
        android:repeatMode="reverse"
        android:toDegrees="15" />

    <translate
        android:duration="100"
        android:fromXDelta="-15%"
        android:repeatCount="5"
        android:repeatMode="reverse"
        android:toXDelta="15%" />
</set>